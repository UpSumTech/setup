[hub]
  protocol = https
[user]
  name = Suman Mukherjee
  email = sumanmukherjee03@gmail.com
[apply]
  whitespace = fix
[core]
  whitespace = space-before-tab,-indent-with-non-tab,trailing-space
  trustctime = false
  editor = vim
  excludesfile = ~/.gitignore
[color]
  interactive = auto
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
[color "status"]
  added = yellow
  changed = green
  untracked = cyan
[merge]
  log = true
[push]
  default = simple
[fetch]
  prune = true
[alias]
  db = !sh -c 'git branch -D $1' -
  drb = !sh -c 'git push origin :refs/heads/$1 && git branch -D $1' -
  cb = !sh -c 'git fetch origin && git branch --track $1 origin/$1 && cd . && git checkout $1' -
  su = !sh -c 'git checkout $1 && git branch --set-upstream-to=origin/$1' -
  pb = !sh -c 'git push -u origin $1'
  sp = !sh -c 'git submodule foreach git pull origin master'
[commit]
  template = ~/.gitmessage
[pull]
  rebase = true
  branch = current
[merge]
  tool = vimdiff
[advice]
  statusHints = false
[diff]
  mnemonicprefix = true
[rerere]
  enabled = 1
